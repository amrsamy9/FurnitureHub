@model List<ProductCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";

}




<h1>Index</h1>
<div>
    <form method="get" action="@Url.Action("Search", "ProductCategory")">
        <div class="input-group mb-3">
            <input type="text" name="searchName" class="form-control" placeholder="Search by name">
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>
    
<a href="/ProductCategory/New" class="btn btn-primary mb-3">New Category</a>
<br />
<table class="table table-bordered table-hover">
    <tr>
        
        <th>Name</th>
        <th>Image</th>
       
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            
            <td>@item.Name</td>
            <td><img src="/img/@item.Image" style="width:150Px" alt="Alternate Text" /></td>
            <td> <a asp-controller="ProductCategory" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a></td>
           
           
        </tr>
    }
</table>




